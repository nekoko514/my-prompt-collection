        for (let i = 0; i < contents.length; i++) {
            prompts.push(contents[i]);
            document.getElementById(`prompt-${i}`).textContent = contents[i];
        }
    }

    function copyPrompt(index, button) {
        const promptText = prompts[index];
        
        navigator.clipboard.writeText(promptText).then(() => {
            // ボタンの表示を変更
            const originalText = button.innerHTML;
            button.innerHTML = '✓ コピー完了！';
            button.classList.add('copied');
            
            // トーストを表示
            showToast();
            
            // 2秒後に元に戻す
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('copied');
            }, 2000);
        }).catch(err => {
            alert('コピーに失敗しました。もう一度お試しください。');
            console.error('コピーエラー:', err);
        });
    }

    function showToast() {
        const toast = document.getElementById('toast');
        toast.classList.add('show');
        
        setTimeout(() => {
            toast.classList.remove('show');
        }, 2000);
    }

    // ページ読み込み時にプロンプトを読み込む
    window.addEventListener('DOMContentLoaded', loadPrompts);
</script>
```

</body>
</html>
